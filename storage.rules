rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload attendance photos
    match /attendance-photos/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to upload profile images
    match /profile-images/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Default rule - authenticated users can read/write their own files
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}